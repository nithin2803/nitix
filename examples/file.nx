func reverse_string_by_words(string) {
	var i  = len(string) - 1
	var start = var end = i + 1
	var result = ""

	while i >= 0 : {
		if get(string, i) == " " {
			var start = i + 1
			while start != end: {
				var result = result + get(string, start)
				var start = start + 1
			}
			var result = result + " "
			var end = i
		}
		var i = i - 1
	}
	var start = 0
	while start != end: {
		var result = result + get(string, start)
		var start = start + 1
	}

	return result
}

